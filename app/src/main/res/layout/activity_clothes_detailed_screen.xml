<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imoshikasewwandi.styleomegaassignment.ClothesDetailScreen">

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="353dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="13dp">

        <ImageView
            android:id="@+id/productPImage"
            android:layout_width="50dp"
            android:layout_height="311dp"
            android:layout_margin="10dp"
            android:layout_weight="0.70"
            app:srcCompat="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="139dp"
        android:layout_marginBottom="11dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <TextView
            android:id="@+id/productPDesc"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/productPPrice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/imagePButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/cart" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
